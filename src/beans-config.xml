<!--                 =================================================== -->                
 
 			    <value>com/coupon/model/COUPON.hbm.xml</value> 
                <value>com/discount/model/DISCOUNT.hbm.xml</value> 
                <value>com/member/model/MEMBER.hbm.xml</value> 
